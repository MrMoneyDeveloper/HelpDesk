@model C8.eServices.Mvc.Models.Priority

@{
    ViewBag.Title = "Create Priority";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<head>
    <link href="~/assets/libs/jsvectormap/css/jsvectormap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="~/assets/libs/gridjs/theme/mermaid.min.css">
</head>

<body>
    <div class="main-content card">
        <div class="page-content">
            <div class="container-fluid">

                <div class="card-header text-center">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["FailureMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["FailureMessage"]
                        </div>
                    }
                    <h2 class="card-title">Create Priority</h2>
                </div><!-- end card header -->

                @using (Html.BeginForm( "PriorityCreation", "Incident", FormMethod.Post, new { @class = "row g-3" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Name, "Priority Level", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "inputEmail4" } })
                       
                    </div>

                    <div class="col-md-3">
                        @Html.LabelFor(model => model.MinTime, "Start Range Value", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.MinTime, new { htmlAttributes = new { @class = "form-control", id = "minTime" } })
                      
                    </div>

                    <div class="col-md-3">
                        @Html.LabelFor(model => model.MaxTime, "End Range Value", htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.MaxTime, new { htmlAttributes = new { @class = "form-control", id = "maxTime" } })
                      
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }



            </div>
        </div>
    </div>
</body>

