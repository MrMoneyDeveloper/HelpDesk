@model C8.eServices.Mvc.Models.Product
@using C8.eServices.Mvc.ViewModels
@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";


    var AdminProductList = ViewBag.AdminProductList as List<ViewHelperModel>;
    var tt = 0;
}


<!doctype html>
<html lang="en">
<head>
    <link href="~/assets/libs/jsvectormap/css/jsvectormap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />



    <link href="~/assets/libs/choices.js/public/assets/styles/choices.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/flatpickr/flatpickr.min.css" rel="stylesheet">

    <!-- One of the following themes -->
    <link rel="stylesheet" href="~/assets/libs/simonwep/pickr/themes/classic.min.css" /> <!-- 'classic' theme -->
    <link rel="stylesheet" href="~/assets/libs/simonwep/pickr/themes/monolith.min.css" /> <!-- 'monolith' theme -->
    <link rel="stylesheet" href="~/assets/libs/simonwep/pickr/themes/nano.min.css" /> <!-- 'nano' theme -->
    <!-- Include the flatpickr styles from CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,100,0,-25" />


    <style>
        .material-icons {
            font-family: 'Material Icons';
            font-weight: normal;
            font-style: normal;
            font-size: 24px; /* Preferred icon size */
            display: inline-block;
            line-height: 1;
            text-transform: none;
            letter-spacing: normal;
            word-wrap: normal;
            white-space: nowrap;
            direction: ltr;
            /* Support for all WebKit browsers. */
            -webkit-font-smoothing: antialiased;
            /* Support for Safari and Chrome. */
            text-rendering: optimizeLegibility;
            /* Support for Firefox. */
            -moz-osx-font-smoothing: grayscale;
            /* Support for IE. */
            font-feature-settings: 'liga';
        }

        .black-text {
            color: black;
        }

        .custom-table {
            border: 1px solid #ccc;
            border-collapse: collapse;
            width: 100%;
        }

        .table-header {
            display: flex;
            background-color: #f3f3f3;
            font-weight: bold;
        }

        .header-cell, .table-cell {
            flex: 1;
            padding: 8px;
        }

        .header-cell {
            text-align: center;
            border-right: 1px solid #ccc;
        }

        .table-row {
            display: flex;
            border-bottom: 1px solid #ccc;
        }

        .table-cell {
            flex: 1;
            text-align: center;
            padding: 8px;
        }

        .employee-checkbox {
            margin: 0 auto;
            display: block;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                border: 1px solid #ccc;
                padding: 8px;
                text-align: left;
            }

            .table th {
                background-color: #f0f0f0;
            }

        .form-check-input {
            margin: 0;
        }

        .text-center {
            text-align: center;
        }
    </style>

</head>
<body>
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box d-flex align-items-center justify-content-between">
                            <h4 class="mb-0">Client Profile</h4>

                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="javascript: void(0);">Signup</a></li>
                                    <li class="breadcrumb-item active">Onboarding Request</li>
                                </ol>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xxl-12 col-xl-6" style="width:100%; height: 100%;">
                        <div class="card">
                            <div class="card-header justify-content-between d-flex align-items-center">
                                <h4 class="card-title mb-0">Client Onboading Settings</h4>
                            </div><!-- end card header -->
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["SuccessMessage"]
                                </div>
                            }

                            @if (TempData["FailureMessage"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["FailureMessage"]
                                </div>
                            }
                            <div class="card-body ">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-bs-toggle="tab" href="#navtabs-home" role="tab">
                                            <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                            <span class="d-none d-sm-block black-text">Create Product</span>

                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-bs-toggle="tab" href="#navtabs-profile" role="tab">
                                            <span class="d-block d-sm-none"><i class="far fa-user"></i></span>
                                            <span class="d-none d-sm-block black-text">Add Product Administrator</span>

                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-bs-toggle="tab" href="#navtabs-messages" role="tab">
                                            <span class="d-block d-sm-none"><i class="far fa-envelope"></i></span>
                                            <span class="d-none d-sm-block black-text">Map Product to Client</span>

                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-bs-toggle="tab" href="#navtabs-4th" role="tab">
                                            <span class="d-block d-sm-none"><i class="fas fa-cog"></i></span>
                                            <span class="d-none d-sm-block black-text">Product Resource List</span>
                                        </a>
                                    </li>
                                </ul>

                                <!-- Tab panes -->
                                <div class="tab-content p-3 text-muted">
                                    <div class="tab-pane active" id="navtabs-home" role="tabpanel">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-xl-6">
                                                    @using (Html.BeginForm("CreateProduct", "Incident"))
                                                    {
                                                        @Html.AntiForgeryToken()

                                                        <div class="form-horizontal">
                                                            <h4></h4>

                                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                            <div class="col-xl-">
                                                                <div class="row mb-3">


                                                                    <div class="input-group mb-3">
                                                                        <span class="input-group-text">
                                                                            <i class="material-symbols-outlined">inventory_2</i>
                                                                        </span>
                                                                        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="Enter Name of Product">
                                                                    </div>

                                                                </div><!-- end row -->
                                                                <!-- Add the Key field input -->
                                                                <div class="input-group mb-3">
                                                                    <span class="input-group-text">
                                                                        <i class="material-symbols-outlined">vpn_key</i>
                                                                    </span>
                                                                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="Key" name="Key" maxlength="4" placeholder="Enter Key">
                                                                    <span id="keyError" class="text-danger"></span>
                                                                </div>


                                                            </div><!-- end row -->

                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="form-group">
                                                                        <div class="col-md-offset-2 col-md-10">
                                                                            <span class="fa fa-pencil-alt"></span> <input type="submit" value="Create" class="btn btn-default" id="submitButton" />
                                                                        </div>
                                                                    </div>
                                                                </div><!-- end col -->
                                                            </div><!-- end row -->
                                                        </div>
                                                    }

                                                </div><!-- end col -->

                                                <div class="col-xl-6">



                                                </div><!-- end col -->
                                            </div><!-- end row -->
                                        </div><!-- end card body -->
                                    </div><!-- end tab pane -->


                                    <div class="tab-pane" id="navtabs-profile" role="tabpanel">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="text-center mb-4">
                                                    <h5>Select Product Admin</h5>
                                                    <p class="card-title-desc">Enter all the below fields to submit</p>
                                                </div>
                                                <form method="post" action="@Url.Action("ProductAdmin", "Incident")">
                                                    <div class="custom-table">
                                                        <div class="table-header">
                                                            <div class="header-cell">Title</div>
                                                            <div class="header-cell">Name</div>
                                                            <div class="header-cell">Email</div>
                                                            <div class="header-cell">Mobile Number</div>
                                                            <div class="header-cell">Designation</div>
                                                            <div class="header-cell">Select</div>
                                                        </div>
                                                        <div class="table-body">
                                                            @if (ViewBag.EmployeeList != null)
                                                            {
                                                                foreach (var employee in ViewBag.EmployeeList)
                                                                {
                                                                    <div class="table-row">
                                                                        <div class="table-cell">@employee.Title</div>
                                                                        <div class="table-cell">@employee.FullName</div>
                                                                        <div class="table-cell">@employee.EmailAddress</div>
                                                                        <div class="table-cell">@employee.MobileNumber</div>
                                                                        <div class="table-cell">@employee.Designation</div>
                                                                        <div class="table-cell"><input type="checkbox" name="SelectedEmployees" value="@employee.Id" class="employee-checkbox" /></div>
                                                                    </div>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <div class="table-row">
                                                                    <div class="table-cell" colspan="5">No employees available</div>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>

                                                    <br />
                                                    <br />

                                                    <div>
                                                        <div class="row">
                                                            <div class="col-lg-6">
                                                                <div class="mb-3">
                                                                    <table class="table">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>Name</th>
                                                                                <th>Select</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            @if (ViewBag.ProductList != null && ViewBag.ProductList.Count > 0)
                                                                            {
                                                                                foreach (var product in ViewBag.ProductList)
                                                                                {
                                                                                    <tr>
                                                                                        <td>@product.Name</td>
                                                                                        <td>
                                                                                            <div class="form-check">
                                                                                                <input type="checkbox" name="SelectedProducts" value="@product.Id" class="form-check-input product-checkbox" />
                                                                                            </div>
                                                                                        </td>
                                                                                    </tr>
                                                                                }
                                                                            }
                                                                            else
                                                                            {
                                                                                <tr>
                                                                                    <td colspan="2" class="text-center">No products available</td>
                                                                                </tr>
                                                                            }
                                                                        </tbody>
                                                                    </table>

                                                                </div>
                                                            </div><!-- end col -->
                                                        </div><!-- end row -->

                                                        <div class="row">
                                                            <div class="col-lg-6">
                                                                <div>
                                                                    <button type="submit" class="btn btn-primary">Submit <span class="fa fa-pencil-alt"></span> </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div><!-- end row -->
                                        </div><!-- end card body -->
                                    </div><!-- end tab pane -->


                                    <div class="tab-pane" id="navtabs-messages" role="tabpanel">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-xl-6">
                                                    <form method="post" action="@Url.Action("AllocateProduct", "Incident")">
                                                        <!-- Table for Clients -->
                                                        <table class="table table-bordered">
                                                            <!-- Table headers -->
                                                            <thead>
                                                                <tr>
                                                                    <th>Client Name</th>
                                                                    <th>Select</th> <!-- Checkbox column -->
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <!-- Loop through clients and create rows with checkboxes -->
                                                                @foreach (var client in ViewBag.ClientList)
                                                                {
                                                                    <tr>
                                                                        <td>@client.Company</td>
                                                                        <td><input type="checkbox" name="SelectedClients" value="@client.Id" class="client-checkbox" /></td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>

                                                        <!-- Table for Products -->
                                                        <table class="table table-bordered">
                                                            <!-- Table headers -->
                                                            <thead>
                                                                <tr>
                                                                    <th>Name</th>
                                                                    <th>Select</th> <!-- Checkbox column -->
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <!-- Check if there are products available -->
                                                                @if (ViewBag.ProductList != null && ViewBag.ProductList.Count > 0)
                                                                {
                                                                    <!-- Loop through products and create rows with checkboxes -->
                                                                    foreach (var product in ViewBag.ProductList)
                                                                    {
                                                                        <tr>
                                                                            <td>@product.Name</td>
                                                                            <td><input type="checkbox" name="SelectedProducts" value="@product.Id" class="product-checkbox" /></td>
                                                                        </tr>
                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    <!-- Display a message if no products are available -->
                                                                    <tr>
                                                                        <td colspan="2">No products available</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>

                                                        <!-- Submit button -->
                                                        <div class="row">
                                                            <div class="col-lg-6">
                                                                <div>
                                                                    <button type="submit" class="btn btn-primary">Submit <span class="fa fa-pencil-alt"></span> </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div><!-- end col -->
                                            </div><!-- end row -->
                                        </div><!-- end card body -->
                                    </div><!-- end tab pane -->
                                    <!-- Fourth Tab Pane -->
                                    <div class="tab-pane" id="navtabs-4th" role="tabpanel">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="table-responsive">
                                                    <table class="table table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th>Product Name</th>
                                                                <th>Allocated Resource Name</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (AdminProductList.Count > 0)
                                                            {
                                                                foreach (var item in AdminProductList)
                                                                {
                                                                    <tr>
                                                                        <td>
                                                                            @Html.Raw(item.ProductName != null ? item.ProductName : "No Product Name")
                                                                        </td>
                                                                        <td>
                                                                            @if (!string.IsNullOrWhiteSpace(item.AdministratorName))
                                                                            {
                                                                                @item.AdministratorName
                                                                            }
                                                                            else
                                                                            {
                                                                                <span>No resource allocated</span>
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <tr>
                                                                    <td colspan="2">No products and administrators available</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>



                                                </div> <!-- end table-responsive -->
                                            </div> <!-- end row -->
                                        </div> <!-- end card-body -->
                                    </div> <!-- end card -->




                                </div><!-- end row -->

                            </div> <!-- container-fluid -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="rightbar-overlay"></div>
    <script src="~/assets/js/pages/form-wizard.init.js"></script>
    <script src="~/assets/js/pages/form-advanced.init.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include the flatpickr library from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        // Get all checkboxes with the 'employee-checkbox' class
        const employeeCheckboxes = document.querySelectorAll('.employee-checkbox');

        // Attach click event listeners to employee checkboxes
        employeeCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('click', function () {
                // Uncheck all other employee checkboxes
                employeeCheckboxes.forEach(cb => {
                    if (cb !== this) {
                        cb.checked = false;
                    }
                });
            });
        });

        // Get all checkboxes with the 'product-checkbox' class
        const productCheckboxes = document.querySelectorAll('.product-checkbox');

        // Attach click event listeners to product checkboxes
        productCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('click', function () {
                // Uncheck all other product checkboxes
                productCheckboxes.forEach(cb => {
                    if (cb !== this) {
                        cb.checked = false;
                    }
                });
            });
        });

        function transformKey() {
            var keyInput = document.getElementById("Key");
            var key = keyInput.value.trim();
            var keyError = document.getElementById("keyError");

            if (key.length === 3) {
                // If the key is 3 characters, add an underscore
                keyInput.value = key + "_";
                keyError.innerText = ""; // Clear the error message
            } else if (key.length === 4) {
                // If the key is 4 characters, clear the error message
                keyError.innerText = "";
            } else {
                // If the key is neither 3 nor 4 characters, show an error message
                keyError.innerText = "Key must be 3 or 4 characters.";
            }
        }

    document.getElementById("submitButton").addEventListener("click", function (e) {
    // Check if the Product Name is not empty
    var productName = document.getElementById("Name").value.trim();
    if (productName === "") {
        alert("Please enter the Product Name.");
        e.preventDefault(); // Prevent form submission

        // Set TempData for server-side alert
        @TempData["FailureMessage"] = "Please enter the Product Name.";
        return;
    }

    // Check if the Key is less than 3 characters
    var key = document.getElementById("Key").value.trim();
    if (key.length < 3) {
        alert("Key must be at least 3 characters.");
        e.preventDefault(); // Prevent form submission

        // Set TempData for server-side alert
        @TempData["FailureMessage"] = "Key must be at least 3 characters.";
        return; // Add this line to stop further processing
    } else {
        // Set TempData for server-side success message
        @TempData["SuccessMessage"] = "Form submitted successfully!";
    }
});

    </script>

</body>
</html>







